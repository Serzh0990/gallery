<%= form_tag login_path do  %>
    <div class="form-inputs">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div class="form-actions">
      <%= submit_tag 'Login', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', root_path, class: 'btn'%>
    </div>
<% end %>